<div>
  <div class="container">
  <div class="row search-index">
      <div class="left col-sm-6 text-center">
      </div>
      <div class="right col-sm-6 text-center">
        <h2><span style="color: #E6455A"><%= @reports.length %></span> Pets Found Near You</h2>
      </div>

  </div>
</div>

  <div class="cardsmapcontainer">
    <div class="cards-container">
      <div class="row">
        <% @reports.each do |report| %>
          <div class="card-padding col-sm-12 col-lg-6">
            <div class="card">
              <img class="card-img-top" src="https://images.unsplash.com/photo-1561037404-61cd46aa615b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80" alt="Card image top">
              <%= link_to report_path(report), class: 'card-link' do %>
                <div class="card-text">
                  <h2 class="name"><%= report.pet.name %></h2>
                  <h2 class="address"><%= report.address %></h2>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="container map">
      <div id="map"
        style="width: 100%; height: 500px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>

  </div>
</div>
