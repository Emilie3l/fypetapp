<div>
  <div class="container">
  <div class="row search-index">
      <div class="left-index col-sm-6">
        <div class="dropdown">
          <button class="dropbtn">Category ▾</button>
            <div class="dropdown-content">
              <a href="#">Dog</a>
              <a href="#">Cat</a>
            </div>
        </div>
        <div class="dropdown">
          <button class="dropbtn">Breed ▾</button>
            <div class="dropdown-content">
              <a href="#">Beagle</a>
              <a href="#">Bulldog</a>
              <a href="#">Chihuahua</a>
              <a href="#">German Shepard</a>
              <a href="#">Labrador</a>
              <a href="#">Schnauzer</a>
              <a href="#">Terrier</a>
              <a href="#">Other</a>
            </div>
        </div>
        <div class="dropdown">
          <button class="dropbtn">Color ▾</button>
            <div class="dropdown-content">
              <a href="#">Black</a>
              <a href="#">Brown</a>
              <a href="#">Cream</a>
              <a href="#">Gold</a>
              <a href="#">Grey</a>
              <a href="#">Yellow</a>
              <a href="#">Other</a>
            </div>
        </div>
      </div>
    <div class="right-index col-sm-6 text-center">
      <h2><span style="color: #E6455A"><%= @reports.length %></span> Pets Found Near You</h2>
    </div>

  </div>
</div>

  <div class="cardsmapcontainer">
    <div class="cards-container">
      <div class="row">
        <% @reports.each do |report| %>
          <div class="card-padding col-sm-12 col-lg-6">
            <div class="card">
              <%= link_to report_path(report), class: 'card-link' do %>
              <img class="card-img-top" style="background-size: cover; background-image: url('<%= report.photo.attached? ? cl_image_path(report.photo.key) : 'https://source.unsplash.com/random' %>');">
                <div class="card-text">
                  <h2 class="name"><%= report.pet.name %></h2>
                  <h2 class="address"><%= report.address %></h2>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="container map">
      <div id="map"
        style="width: 100%; height: 500px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>

  </div>
</div>
