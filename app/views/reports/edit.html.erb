<div class="container">
  <div class="new-form">
    <div class="row justify-content-center pt-3">
      <div class="col-12 col-lg-8">
              
      <%= simple_form_for [@report] do |f| %>
        <div class="form-row">
          <div class="col-md-6">

            <div class="card-new-report">
                  <% if @report.pet.photo.attached? %>
                    <div class="card-new-report-show-photo" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= cl_image_path @report.pet.photo.key %>')">
                    </div>
                  <% else %>
                    <div class="card-new-report-show-photo" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('https://images.unsplash.com/photo-1561037404-61cd46aa615b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80')">
                    </div>
                  <% end %>
              <div class="card-new-report-description">
                <h4 class="desc-name"><%= @report.pet.name %></h4> <h4 class="desc-gender"><%= @report.pet.gender %></h4>
                <p class="desc-breed"><%= @report.pet.breed %></p><p class="desc-category"><%= @report.pet.category.capitalize %></p>
              </div>
            </div>

          </div>

          <div class="col-md-6 pl-3">
            <h3>Report info</h3>
            <p>Please give us details about the incident.</p>

            <div class="form-row">
              <div class="form-group col-md-6">
                <%= f.input :status, 
                            autofocus: true,
                            required: true,
                            collection: ['Missing', 'Found'],
                            label: "Kind of report",
                            placeholder: "Choose Missing or Found",
                            hint: "Select one option from the list." %>
              </div>

              <div class="form-group col-md-6">
                <%= f.input :date, as: :date,
                            required: true,
                            html5: true,
                            input_html: { value: Date.today },
                            label: "When did it happen?" %>
              </div>
            </div>

            <div class="form-row">
              <div class="form-group col-md-12">
                <%= f.input :address, as: :text,
                            required: true %>
              </div>
            </div>
            
            <div class="form-row">
              <div class="form-group col">
                <%= f.input :reward_offered, as: :boolean,
                            checked_value: true, unchecked_value: false,
                            boolean_style: :inline %>
              </div>

              <div class="input-group col">
                <%= f.input :reward_amount, as: :string,
                            disabled: true %>
              </div>
            </div>

            <div class="form-row">
              <%= f.submit class: "btn btn-primary"%>
            </div>
          
          </div>
        </div>
      <% end %>
      
      </div>
    </div>
  </div>
</div>
