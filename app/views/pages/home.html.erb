<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url(https://images.unsplash.com/photo-1561037404-61cd46aa615b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80);">
  <div class="container">
    <h1>Is your pet lost?</h1>
    <p>We can help you find it!</p>
    <%= link_to "Find My Pet", new_pet_path, class: "btn bt-flat btn-primary btn-fypet" %>
  </div>
</div>

<div class="container">
  <div class="text-center">
    <h2><strong>Recently Reunited Pets</strong> <i class="far fa-heart at-home"></i></h2>
  </div>

  <div class="cards">

    <% @iterator = 0 %>

    <% @recent_reunited.each do |report| %>
      <div class="card-pet">
        <%= link_to report_path(report), class: 'card-link' do %>
          <% if report.pet.photo.attached? %>
            <div class="card-pet-img" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= cl_image_path report.pet.photo.key %>')">
            </div>
          <% else %>
            <div class="card-pet-img" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('https://images.unsplash.com/photo-1561037404-61cd46aa615b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80')">
            </div>
          <% end %>

          <div class="card-pet-infos">
            <div>
              <h2><%= report.pet.name %></h2>
              <p class="testimonials"><%= @testimonials[@iterator] %></p>
              <img src="<%= @user_photos[@iterator] %>" class="card-trip-user-home avatar-bordered-home" />
            </div>
          </div>
        <% end %>
      </div>
      <% @iterator += 1 %>
    <% end %>
  </div>
</div>
