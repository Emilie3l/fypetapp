<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fypet-navbar">
  <%= link_to root_path, class: "navbar-brand" do %>
    <div class="fypet-text"><h2>Find Your Pet</h2></div>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto fypet-navbar-nav">
        <li class="nav-item fypet-nav-item">
          <%= link_to "I Lost My Pet", "#", class: "fypet-nav-link" %>
        </li>
        <li class="nav-item fypet-nav-item">
          <%= link_to "I Found A Pet", "#", class: "fypet-nav-link" %>
        </li>
      <% if user_signed_in? %>
        <li class="nav-item fypet-nav-item active">
          <%= link_to "Home", root_path, class: "fypet-nav-link" %>
        </li>
        <li class="nav-item fypet-nav-item">
          <%= link_to "Messages", "#", class: "fypet-nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "fypet-dropdown-item dropdown-item" %>
            <%= link_to "Another action", "#", class: "fypet-dropdown-item dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "fypet-dropdown-item dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item fypet-nav-item">
          <%= link_to "Sign up",  new_user_registration_path, class: "fypet-nav-link" %>
        </li>
        <li class="nav-item fypet-nav-item">
          <%= link_to "Login", new_user_session_path, class: "fypet-nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
