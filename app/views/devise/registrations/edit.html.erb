<div class="container main-form">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <h3>My profile</h3>
    <p>Keep your info updated, it is the only way to get feedback for your reports.</p>
    
    <% if @user.picture.attached? %>
      <% label_photo = "Update" %>
      <% holder_photo = cl_image_path @user.picture.key %>
    <% else %>
      <% label_photo = "Upload" %>
      <% holder_photo = "https://www.bu.edu/cs/files/2018/07/placeholder-face-big.png" %>
    <% end %>
    <%= image_tag "#{holder_photo}",
        width: 255, height: 255, class: "hidden", id: "photo-preview" %>
    <%= f.input :picture, as: :file,
                 required: false,
                 input_html: {  class: 'd-none', id: 'photo-input' },
                 label_html: { class: 'upload-photo'},
                 label: "ðŸ“¸ #{label_photo} your photo" %>
    
    <%= f.input :first_name, 
                autofocus: true,
                placeholder: "First name" %>
    <%= f.input :last_name,
                placeholder: "Last name" %>
    <%= f.input :email, required: true %>
    <%= f.input :phone_number %>
    <%= f.input :address, 
                placeholder: "1298 Street name, City, State",
                hint: "With an address you could improve your searches through the map." %>
    <%= f.input :password,
                hint: "Leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                hint: "We need your current password to confirm your changes",
                required: true,
                input_html: { autocomplete: "current-password" } %>

    <%= f.button :submit, "Update profile", class: "btn btn-primary" %>

  <% end %>

  <h4>Unhappy?</h4>
  <%= link_to "Cancel my account", registration_path(resource_name),
                                   data: { confirm: "Are you sure?" },
                                   method: :delete,
                                   class: "btn btn-primary" %>

  <%= link_to "Back", :back, class: "btn btn-primary" %>
</div>