<div class="container">
  <div class="new-form">
    <div class="row justify-content-center pt-3">
      <div class="col-md-4 col-md-offset-4">
        <p class="h3 mb-1">Log in</p>
        <p>To review your reports you must be logged in.</p>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: "text-center border-light p-5") do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: true,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions mb-3">
            <%= f.button :submit, "Log in", class: "btn btn-primary", id: "btn-login" %>
          </div>
          <div class="text-center">
          <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
