<div class="container main-form">
  <p class="h3 mb-4">Log in</p>
  <p>To review your reports you must be logged in.</p>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: "text-center border-light p-5") do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
